{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["../*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["src/**/*", "../types/**/*", "drizzle.config.ts"],
  "ts-node": {
    "esm": true
  },

}